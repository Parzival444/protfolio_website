<!DOCTYPE html>
<html>
<head>
  <title>My Projects</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #12181f;
      color: #e0e0e0;
    }
    .navbar {
      background-color: #0d1117;
    }
    .navbar-brand, .nav-link {
      color: #58a6ff !important;
    }
    .card {
      background-color: #161b22;
      color: #c9d1d9;
      border: 1px solid #30363d;
    }
    .btn-github {
      background-color: transparent;
      border: 1px solid #58a6ff;
      color: #58a6ff;
    }
    .btn-github:hover {
      background-color: #58a6ff;
      color: #0d1117;
    }
  </style>
</head>
<body>

  <nav class="navbar navbar-expand-lg px-4 shadow-sm mb-4">
    <div class="container-fluid">
      <a class="navbar-brand fw-bold" href="/">MyPortfolio</a>
      <div class="navbar-nav">
        <a class="nav-link" href="/">Home</a>
        <a class="nav-link" href="/about">About Me</a>
      </div>
    </div>
  </nav>

  <div class="container">
    <h1 class="mb-4 fw-bold">My Projects</h1>

    <% projects.forEach(project => { %>
      <div class="card mb-4 shadow-sm border-0 rounded-4 p-3">
        <div class="card-body">
          <h4 class="card-title fw-semibold"><%= project.title %></h4>
          <p class="card-text"><%= project.description %></p>
          <a href="<%= project.link %>" target="_blank" class="btn btn-github">View on GitHub</a>
        </div>
      </div>
    <% }); %>
  </div>

</body>
</html>
